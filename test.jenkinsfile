pipeline {
    agent any
    triggers { cron('H 18 * * 1-5') }
    stages {
        stage('scm') {
            steps {
             git branch: 'master', 
                 url: 'https://github.com/nagarjunaduggireddy/openmrs-core.git'
            }
        
        }
        stage('build') {
            steps{
             sh 'mvn package'
            }
        }
        stage('test') {
            steps {
                junit testResults :'**/surefire-reports/*.xml'
            }
        }
    }
}
